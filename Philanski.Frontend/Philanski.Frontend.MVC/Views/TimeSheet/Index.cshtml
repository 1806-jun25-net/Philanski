@model List<Philanski.Frontend.MVC.Models.TimeSheets>[]



<h2>Time Sheets</h2>
<hr />

<div>
    <div class="form-group">
        
    </div>
    <div>
        <div>
            <header>
                <a class="btn btn-default" asp-area="" asp-controller="TimeSheet" asp-action="Create" asp-route-weekstart=@DateTime.Now.Date.ToString("dd-MM-yyyy")>Current Time Sheet</a>
            </header>
        </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Length > 0)
                    {
                        for (int i = 0; i < Model.Length; i++)
                        {
                            <tr class="table-primary">

                                <td>
                                    @Model[i][6].Date.Month/@Model[i][6].Date.Day to @Model[i][0].Date.Month/@Model[i][0].Date.Day
                                </td>
                                <td>
                                    <a class="btn btn-default" asp-area="" asp-controller="TimeSheet" asp-action="PreviousTimesheet" asp-route-weekstart="@Model[i][6].Date.Date.ToString("dd-MM-yyyy")">View</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="table-primary">
                            <td>You do not have any timesheets to display. Work harder!</td>
                        </tr>
                    }

                </tbody>
            </table>
        <div>

        </div>
    </div>
</div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
